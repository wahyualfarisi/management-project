<div class="row">
    <div class="page-header">
        <div class="d-flex align-items-center">
            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#/project"><i class="ti ti-home"></i></a></li>
                    <li class="breadcrumb-item active">Change Password</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="widget has-shadow">
<div class="row flex-row">
    <div class="col-12">
        <div class="widget-body">
                <form id="form-change-password">
                        <div class="form-horizontal">
                                <div class="form-group row d-flex align-items-center mb-5">
                                        <label class="col-lg-3 form-control-label">Enter your current password</label>
                                        <div class="col-lg-9">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="la la-unlock"></i>
                                                    </span>
                                                    <input type="text" class="form-control" id="current_password" name="current_password"  placeholder="Enter your current password">
                                                </div>
                                            </div>
                                        </div>
                                 </div>
                        </div>
                       
                        <button type="submit" class="btn btn-primary mr-1 mb-2" id="create-new-project"><i class="la la-send-o"></i>Next</button>
                </form>

                <form id="form-replace-password">
                        <div class="form-horizontal">
                                <div class="form-group row d-flex align-items-center mb-5">
                                        <label class="col-lg-3 form-control-label"> New password</label>
                                        <div class="col-lg-9">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="la la-unlock"></i>
                                                    </span>
                                                    <input type="text" class="form-control" id="password" name="password"  placeholder="Enter your password">
                                                </div>
                                            </div>
                                        </div>
                                 </div>

                                 <div class="form-group row d-flex align-items-center mb-5">
                                        <label class="col-lg-3 form-control-label"> Confirm password</label>
                                        <div class="col-lg-9">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="la la-unlock"></i>
                                                    </span>
                                                    <input type="text" class="form-control" id="confirm_password" name="confirm_password"  placeholder="Enter confirm password">
                                                </div>
                                            </div>
                                        </div>
                                 </div>
                        </div>
                       
                        <button type="submit" class="btn btn-primary mr-1 mb-2" id="btn-replace-password"><i class="la la-send-o"></i>Next</button>
                        <button type="button" class="btn btn-danger mr-1 mb-2" id="btn-cancel"><i class="la la-times"></i>Cancel</button>
                </form>
        </div>
    </div>
</div>
</div>
<script src="static/script/storage/myStorage.js"></script>
<script src="static/script/change_password.js"></script>